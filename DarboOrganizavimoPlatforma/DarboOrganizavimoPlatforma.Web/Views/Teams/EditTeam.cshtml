@model DarboOrganizavimoPlatforma.Web.Models.AdminEditTeamViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.TeamName </h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTeam">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamDescription" class="control-label"></label>
                <input asp-for="TeamDescription" class="form-control" />
                <span asp-validation-for="TeamDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (User.IsInRole("Admin"))
{
<a asp-controller="Teams" asp-action="GetAllTeams" class="btn btn-primary" style="width:auto">Back to Team List</a>
}
else
{
<a asp-controller="Manager" asp-action="CompanyTeamsList" class="btn btn-primary" style="width:auto">Back to Team List</a>
}


