@model DarboOrganizavimoPlatforma.Web.Models.AdminNewTeamViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminCreateTeam">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TeamDescription" class="control-label"></label>
                <textarea asp-for="TeamDescription" class="form-control" rows="4"></textarea>
                <span asp-validation-for="TeamDescription" class="text-danger"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="CompanyID">Select Company the Team belongs to from a list of Companies..</label>
                <select class="form-control" asp-for="CompanyID" asp-items=@ViewBag.AllCompanies>
                    <option selected></option>
                </select>
                <span asp-validation-for="CompanyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}