@model DarboOrganizavimoPlatforma.Web.Models.AdminNewTeamViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-8 offset-sm-2">
                <h1 class="text-center">Create Team</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">New Team</h3>
                </div>
                <form method="post" asp-controller="Teams" asp-action="AdminCreateTeam">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <p class="text-danger">
                                @ViewBag.SizeExceeded
                            </p>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="TeamName" class="control-label"></label>
                                    <input asp-for="TeamName" class="form-control" />
                                    <span asp-validation-for="TeamName" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-1">
                                    <label asp-for="CompanyID">Select Company the Team belongs to</label>
                                    <select class="form-control" asp-for="CompanyID" asp-items=@ViewBag.AllCompanies>
                                        <option selected></option>
                                    </select>
                                    <span asp-validation-for="CompanyID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="TeamDescription" class="control-label"></label>
                                    <textarea asp-for="TeamDescription" class="form-control" rows="5"></textarea>
                                    <span asp-validation-for="TeamDescription" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div> <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <a class="btn btn-secondary float-right" asp-controller="Teams" asp-action="GetAllTeams">Back to Teams List</a>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}