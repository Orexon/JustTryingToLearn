@model DarboOrganizavimoPlatforma.Web.Models.AdminAddUserToCompanyViewModel

@{
    ViewData["Title"] = "Add";
}


<h1>Add</h1>
<hr />
<p class="text-danger">
    @ViewBag.SizeExceeded
</p>
<div class="row">
    <div class="col-12">
        <form asp-action="AdminAddUserToCompany">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group  mb-3">
                <label asp-for="CompanyID">Select Company</label>
                <select class="form-control" asp-for="CompanyID" asp-items=@ViewBag.AllCompanies>
                    <option selected>Choose from a list of companies...</option>
                </select>
                <span asp-validation-for="CompanyID" class="text-danger"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="AppUserID">Select user</label>
                <select class="form-control" asp-for="AppUserID" asp-items=@ViewBag.AllUsers>
                    <option selected>Choose from a list of user emails...</option>
                </select>
                <span asp-validation-for="AppUserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
     }
}