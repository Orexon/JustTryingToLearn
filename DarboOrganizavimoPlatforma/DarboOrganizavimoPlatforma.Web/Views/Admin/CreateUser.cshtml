@model DarboOrganizavimoPlatforma.Web.Models.NewUserViewModel

@{
    ViewData["Title"] = "Create User";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-8 offset-sm-2">
                <h1 class="text-center">Create User</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">New User</h3>
                </div>
                <form method="post" asp-controller="Admin" asp-action="CreateUser">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <p class="text-danger">
                                @ViewBag.SizeExceeded
                            </p>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label">Email</label>
                                    <input asp-for="Email" type="email" class="form-control">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label">Password</label>
                                    <input asp-for="Password" type="password" class="form-control">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="control-label">Password Confirm</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="MemberName" class="control-label">Member name</label>
                                    <input asp-for="MemberName" type="text" class="form-control" id="inputName">
                                    <span asp-validation-for="MemberName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CompanyID" class="control-label">Select Company from a list of companies</label>
                                    <select class="form-control" asp-for="CompanyID" asp-items=@ViewBag.AllCompanies>
                                        <option selected></option>
                                    </select>
                                    <span asp-validation-for="CompanyID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserRole" class="control-label">Select User Role from a list of roles...</label>
                                    <select class="form-control" asp-for="UserRole" asp-items=@ViewBag.allRoles>
                                        <option selected></option>
                                    </select>
                                    <span asp-validation-for="UserRole" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div> <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <a class="btn btn-secondary float-right" asp-controller="Admin" asp-action="GetUserList">Back to Users List</a>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->