@model DarboOrganizavimoPlatforma.Domains.Project

@{
    ViewData["Title"] = "Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-8 offset-sm-2">
                <h1 class="text-center">@Model.ProjectName Details</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Horizontal Form -->
<section class="content">
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">@Model.ProjectName</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <label class="col-sm-12">@Html.DisplayNameFor(model => model.Company.CompanyName)</label>
                                <div class="col-sm-12">@Html.DisplayFor(model => model.Company.CompanyName)</div>
                            </div>
                            <div class="row">
                                <label class="col-sm-12">@Html.DisplayNameFor(model => model.ProjectName)</label>
                                <div class="col-sm-12">@Html.DisplayFor(model => model.ProjectName)</div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <label class="col-sm-12">@Html.DisplayNameFor(model => model.CreateTime)</label>
                                <div class="col-sm-12">@Html.DisplayFor(model => model.CreateTime)</div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <label class="col-sm-12">@Html.DisplayNameFor(model => model.ProjectDescription)</label>
                                <div class="col-sm-12">@Html.DisplayFor(model => model.ProjectDescription)</div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <a class="btn btn-success" asp-controller="Project" asp-action="EditProject" asp-route-id="@Model.ProjectId">Edit</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Project" asp-action="GetAllProjects" class="btn btn-primary float-right" style="width:auto">Back to Project List</a>
                    }
                    else
                    {
                        <a asp-controller="Manager" asp-action="CompanyProjectList" class="btn btn-primary float-right">Back to Project List</a>
                    }
                </div>
                <!-- /.card-footer -->
            </div>
        </div>
    </div>
</section>