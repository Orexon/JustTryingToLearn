@model DarboOrganizavimoPlatforma.Domains.Project

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.ProjectName Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-controller="Project" asp-action="EditProject" asp-route-id="@Model.ProjectId">Edit</a> |
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Project" asp-action="GetAllProjects" class="btn btn-primary" style="width:auto">Back to Project List</a>
    }
    else
    {
        <a asp-controller="Manager" asp-action="CompanyProjectList" class="btn btn-primary" style="width:auto">Back to Project List</a>
    }
</div>