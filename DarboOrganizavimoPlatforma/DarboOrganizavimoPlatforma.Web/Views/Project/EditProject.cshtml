@model DarboOrganizavimoPlatforma.Web.Models.EditProjectViewModel

@{
    ViewData["Title"] = "EditProject";
}

<h1>Edit @Model.ProjectName </h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Project" asp-action="EditProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectDescription" class="control-label"></label>
                <input asp-for="ProjectDescription" class="form-control" />
                <span asp-validation-for="ProjectDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (User.IsInRole("Admin"))
{
    <a asp-controller="Project" asp-action="GetAllProjects" class="btn btn-primary" style="width:auto">Back to Project List</a>
}
else
{
    <a asp-controller="Manager" asp-action="CompanyProjectList" class="btn btn-primary" style="width:auto">Back to Project List</a>
}


