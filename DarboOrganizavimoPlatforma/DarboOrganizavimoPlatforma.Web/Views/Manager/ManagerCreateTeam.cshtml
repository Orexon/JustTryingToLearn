@model DarboOrganizavimoPlatforma.Web.Models.ManagerNewTeamViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTeam">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TeamDescription" class="control-label"></label>
                <textarea asp-for="TeamDescription" class="form-control" rows="4"></textarea>
                <span asp-validation-for="TeamDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetCompanyTeams">Back to List</a> @* Get Company Team List*@
</div>

