@model DarboOrganizavimoPlatforma.Web.Models.ManagerCreateTeamViewModel

@{
    ViewData["Title"] = "CreateTeam";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-8 offset-sm-2">
                <h1 class="text-center">Create Team</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-sm-8 offset-sm-2 col-md-6 offset-sm-3">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">New Team</h3>
                </div>
                <form method="post" asp-controller="Manager" asp-action="CreateTeam">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="TeamName" class="control-label"></label>
                                    <input asp-for="TeamName" class="form-control" />
                                    <span asp-validation-for="TeamName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="TeamDescription" class="control-label"></label>
                                    <textarea asp-for="TeamDescription" class="form-control" rows="5"></textarea>
                                    <span asp-validation-for="TeamDescription" class="text-danger"></span>
                                 </div>
                            </div>
                        </div>
                    </div> <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <a class="btn btn-secondary float-right" asp-controller="Manager" asp-action="CompanyTeamsList">Back to Company Teams List</a>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section><!-- /.content -->
@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}