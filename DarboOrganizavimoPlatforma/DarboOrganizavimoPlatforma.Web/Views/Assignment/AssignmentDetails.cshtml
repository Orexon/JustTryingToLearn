@model DarboOrganizavimoPlatforma.Domains.Assignment

@{
    ViewData["Title"] = "AssignmentDetails";
}

<h1>@Model.Team.TeamName - @Model.AssignmentName Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssignmentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignmentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssignmentDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignmentDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssignmentStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignmentStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateTime)
        </dd>
        @if (Model.AssignmentStatus == DarboOrganizavimoPlatforma.Domains.CompletionStatus.Done)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CompletedTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CompletedTime)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsersAssigned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsersAssigned.Count)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-controller="Assignment" asp-action="EditAssignment" asp-route-AssignmentId="@Model.AssignmentId">Edit</a> |
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Assignment" asp-action="GetAllAssignments" class="btn btn-primary" style="width:auto">Back to Assignment List</a>
    }
    else
    {
        <a asp-controller="Assignment" asp-action="GetTeamAssignmentList" asp-route-TeamId="@Model.TeamId" class="btn btn-primary" style="width:auto">Back to Team Assignment List</a>
    }
</div>
